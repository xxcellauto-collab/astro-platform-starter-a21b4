---
import Layout from '../layouts/Layout.astro';
---

<Layout title="NJ Tow Truck Service | Bergen County">
  <main class="min-h-screen bg-slate-900 text-white">
    <section class="max-w-4xl mx-auto px-4 py-16">
      <h1 class="text-3xl sm:text-4xl font-bold mb-4">
        NJ Tow Truck Service – Bergen County
      </h1>

      <p class="text-lg mb-6">
        24/7 towing and roadside assistance in Bergen County. We handle
        everyday breakdowns, local tows under 100 miles, and safe transport
        for luxury, exotic, and classic cars.
      </p>

      <div class="bg-slate-800 rounded-lg p-4 mb-8">
        <p class="text-sm uppercase tracking-wide text-slate-300">
          Call Now
        </p>
        <p class="text-2xl font-semibold">
          551-346-5037
        </p>
        <p class="text-sm text-slate-300 mt-1">
          Fast response anywhere in Bergen County.
        </p>
      </div>

      <h2 class="text-2xl font-semibold mb-3">Services</h2>
      <ul class="list-disc list-inside space-y-2 mb-8">
        <li>Local towing under 100 miles</li>
        <li>Exotic &amp; luxury car transport</li>
        <li>Classic &amp; collector car transport</li>
        <li>Flatbed towing</li>
        <li>Roadside assistance (jump starts, lockouts, tire changes)</li>
      </ul>

      <h2 class="text-2xl font-semibold mb-3">Service Area</h2>
      <p>
        Service area: <strong>Bergen County</strong>
      </p>
    </section>
  </main>
</Layout>
